<% provide(:title, 'Login') %>

<div class="body-container">
  <%= form_for(:session, url: sessions_path, html: {class: "form-signin", role: "form"}) do |f| %>
      <h2 class="form-signin-heading">Please Sign In</h2>


      <%= f.text_field :email, { class:"form-control", placeholder:"Email address", required: true  } %>


      <%= f.password_field :password, { class:"form-control", placeholder:"Password", required: true } %>

      <!-- <div class="div-content-left"><%= f.check_box :remember_me %> <%= f.label :remember_me %> </div> -->

      <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>



</div>





