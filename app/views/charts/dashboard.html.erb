<div class="graph-container">
  <h1>Dashboard</h1>
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="item active">


        <%= pie_chart BloodDonor.joins("INNER JOIN blood_groups on blood_group_id = blood_groups.id").select("blood_groups.blood_type").group("blood_type").count, library: { title: {text: "Chart: Donors by Blood Group", style: {color: "#fff"}}, chart: {backgroundColor: "#333"} }%>
      </div>
      <div class="item">
        <div class="pie-center"> <%= pie_chart BloodDonor.joins("INNER JOIN genders on gender_id = genders.id").select("genders.sexlabel").group("sexlabel").count, library: { title: {text: "Chart: Donors by Gender", style: {color: "#fff"}}, chart: {backgroundColor: "#333"} }%></div>
      </div>
      <div class="item">
        <div class="pie-center"> <%= pie_chart BloodDonor.group("address").count, library: { title: {text: "Chart: Donors by Town", style: {color: "#fff"}}, chart: {backgroundColor: "#333"} }%></div>
      </div>
    </div>
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>



  <!-- <%= pie_chart BloodDonor.group("address").count, library: { title: {text: "Chart: Donors by Town", style: {color: "#fff"}}, chart: {backgroundColor: "#333"} }%> -->
</div>
