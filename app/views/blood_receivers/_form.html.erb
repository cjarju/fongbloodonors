<div class="body-container">
  <h1>Edit Info</h1>
  <div class="div-content-left">

    <%= form_for(@blood_receiver, html: {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @blood_receiver.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@blood_receiver.errors.count, "error") %> prohibited this blood_receiver from being saved:</h2>
          <ul>
          <% @blood_receiver.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <div class="pad-lft-2">
          <%= f.label :name, 'Name:', {class: "col-sm-3 control-label"} %>
          <div class="col-sm-7"><%= f.text_field :name, {placeholder: 'name surname', class: "form-control",  required: true } %></div>
        </div>
      </div>

      <div class="form-group">
        <div class="pad-lft-2">
          <%= f.label :blood_group_id, 'Blood Group:', {class: "col-sm-3 control-label"} %>
          <div class="col-sm-7"><%= f.collection_select(:blood_group_id, BloodGroup.all, :id, :blood_type,  {prompt: true}, {class: "form-control fifty-perc-width", required: true, disabled: true }) %></div>
        </div>
      </div>

      <div class="form-group">
        <div class="pad-lft-2">
          <%= f.label :gender_id, 'Gender: ', {class: "col-sm-3 control-label"} %>
          <div class="col-sm-7 gender-radio"><%= f.collection_radio_buttons(:gender_id, Gender.all, :id, :sexlabel) %></div>
        </div>
      </div>

      <div class="form-group">
        <div class="pad-lft-2">
          <%= f.label :age, 'Age:', {class: "col-sm-3 control-label"} %>
          <div class="col-sm-7"><%= f.text_field :age, {size: '3', maxlength: '3', placeholder: 'age' , class: "form-control twenty5-perc-width", required: true} %></div>
        </div>
      </div>

      <div class="form-group">
        <div class="pad-lft-2">
          <%= f.label :date_received, 'Date Received: ', {class: "col-sm-3 control-label"} %>
          <div class="col-sm-7">
            <div class="input-group date">
              <%= f.text_field :date_received, {placeholder: 'date received', class: "form-control",  required: true }  %>
              <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="pad-lft-2">
          <%= f.label :phone_num, 'Phone Number:', {class: "col-sm-3 control-label"} %>
          <div class="col-sm-7"><%= f.text_field :phone_num, {size: '7', maxlength: '7', placeholder: 'xxxxxxx', class: "form-control fifty-perc-width"} %></div>
        </div>
      </div>

      <div class="form-group">
        <div class="pad-lft-2">
          <%= f.label :address, 'Address:', {class: "col-sm-3 control-label"} %>
          <div class="col-sm-7"><%= f.text_field :address, {size: '35', maxlength: '50', placeholder: 'address', class: "form-control", required: true } %></div>
        </div>
      </div>
   
      <div class="form-group">
        <div class="pad-lft-2">
          <%= f.label :blood_donor_id, 'Blood Donor:', {class: "col-sm-3 control-label"} %>
          <div class="col-sm-7"><%= f.collection_select(:blood_donor_id, BloodDonor.all, :id, :name,  {prompt: true}, {class: "form-control fifty-perc-width", required: true, disabled: true }) %></div>
        </div>
      </div>
   
      <div class="div-content-center submit-btn">
        <%= f.submit((current_page?(new_blood_receiver_path))? 'Create' : 'Save' , {class: "btn btn-primary"})  %>
      </div>
    <% end %>
  </div>
</div>