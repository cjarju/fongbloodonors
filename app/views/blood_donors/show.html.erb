<div class="body-container">
  <h1>Donor Info</h1>
  <table class="show_record">
    <thead></thead>
    <tbody>
      <tr><td>Date Donated </td> <td><%= @blood_donor.date_donated %></td></tr>
      <tr><td>Name </td> <td><%= @blood_donor.name %></td></tr>
      <tr><td>Age </td> <td><%= @blood_donor.age %></td></tr>
      <tr><td>Phone Number </td> <td><%= @blood_donor.phone_num %></td></tr>
      <tr><td>Address </td> <td><%= @blood_donor.address %></td></tr>
      <tr><td>Gender </td> <td><%= @blood_donor.gender.sexval %></td></tr>
      <tr><td>Blood Group </td> <td><%= @blood_donor.blood_group.blood_type %></td></tr>
    </tbody>
  </table>
  <div class="div-gicon"><i class="glyphicon glyphicon-th-list"></i> <%= link_to 'Donors', blood_donors_path %></div>
</div>

